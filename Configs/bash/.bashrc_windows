source ~/git-completion.bash

git config --global alias.unstage 'reset HEAD --'
git config --global alias.st status
git config --global alias.co checkout
git config --global alias.br branch
git config --global alias.ci commit
git config --global alias.staash 'stash --include-untracked'
git config --global alias.commend 'commit --amend --no-edit'

alias savediff="git diff > C:/Users/clottman/code/Scripts/diff.txt; echo 'git diff > %HOMEPATH%/code/Scripts/diff.txt'"
alias masterRefresh="git checkout master; git pull"
alias st="C:\Program Files\Sublime Text 2\sublime_text.exe"
